@model TGF.WebApp.Models.ProfileVM

<h5>Profil użytkownika</h5>
<br />
<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-5">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h6 class="text-muted">O mnie</h6>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h5 class="card-title">Twoje postaci</h5>
                @foreach (var character in Model.Characters)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <a class="text-dark name" asp-area="" asp-controller="Character" asp-action="Get" asp-route-id="@character.Id">@character.Name</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row no-gutters">
        <div class="col-md">
            <div class="card-footer">
                <a class="mr-3" asp-action="Edit" asp-route-id="@Model.Id">Edytuj profil</a>
            </div>
        </div>
    </div>
</div>

<style>
    .name {
        font-size: 20px;
    }
    .name:hover {
        text-decoration: none;
        text-shadow: 0px 0px 2px #808080;
    }
</style>
